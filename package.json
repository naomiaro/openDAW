{
  "name": "opendaw",
  "version": "0.0.0",
  "private": true,
  "license": "LGPL-3.0-or-later",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "cert": "bash ./scripts/cert.sh",
    "clean": "bash ./scripts/clean.sh",
    "build": "turbo build",
    "dev:studio": "turbo run dev --filter=@naomiarotest/app-studio",
    "dev:headless": "turbo run dev --filter=@naomiarotest/app-headless",
    "dev:example-import-sample": "turbo run dev --filter=@naomiarotest/example-import-sample",
    "dev:lab": "turbo run dev --filter=@naomiarotest/lab",
    "dev:yjs-server": "turbo run dev --filter=yjs-server",
    "test": "turbo run test --concurrency=1",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-sdk": "lerna publish"
  },
  "devDependencies": {
    "@types/ssh2-sftp-client": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "lerna": "^8.2.3",
    "prettier": "^3.6.2",
    "ssh2-sftp-client": "^12.0.1",
    "ts-node": "^10.1.0",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andremichelle/opendaw"
  },
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "packages/**/*"
  ],
  "overrides": {
    "@naomiarotest/lib-box": "*",
    "@naomiarotest/lib-dsp": "*",
    "@naomiarotest/lib-runtime": "*",
    "@naomiarotest/lib-std": "*",
    "@naomiarotest/lib-dom": "*",
    "@naomiarotest/lib-fusion": "*",
    "@naomiarotest/studio-enums": "*",
    "@naomiarotest/studio-boxes": "*",
    "@naomiarotest/studio-adapters": "*",
    "@naomiarotest/studio-core": "*"
  }
}
